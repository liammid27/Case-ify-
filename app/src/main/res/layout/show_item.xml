<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemShowingConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itemHeader_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/space_mono"
            android:text="ITEM NAME"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDescViewPage_TV"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:fontFamily="@font/roboto"
            android:text="Item description" />

        <ImageView
            android:id="@+id/itemImageViewPage_IV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_case_ify_logo" />

        <TextView
            android:id="@+id/itemDateViewPage_TV"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Item date acquired"
            android:textAlignment="center"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>